# Louaj Local Node Environment Configuration

# Database
DATABASE_URL="file:./prisma/local.db"

# Server Configuration
PORT=3001
NODE_ENV=development

# Station Configuration
STATION_ID="monastir-main-station"
STATION_NAME="Monastir Main Station"
GOVERNORATE="Monastir"
DELEGATION="Monastir"

# Central Server Connection
CENTRAL_SERVER_URL="http://localhost:5000"
CENTRAL_SERVER_WS_URL="ws://localhost:5000/ws"
API_SECRET="your-api-secret-key"

# Authentication
JWT_SECRET="your-jwt-secret-key-for-local-sessions"
JWT_EXPIRES_IN="24h"
SESSION_TIMEOUT_HOURS=8

# Sync Configuration
SYNC_INTERVAL_SECONDS=30
MAX_RETRY_ATTEMPTS=3
BATCH_SYNC_SIZE=50

# Auto Trip Sync Configuration
TRIP_SYNC_INTERVAL_MS=30000
CONNECTION_CHECK_INTERVAL_MS=10000
MAX_SYNC_RETRY_ATTEMPTS=3
SYNC_RETRY_DELAY_MS=5000

# Logging
LOG_LEVEL="info"
LOG_TO_FILE=false
LOG_FILE_PATH="./logs/local-node.log"

# Development
DEBUG=false
ENABLE_CORS=true
ENABLE_REQUEST_LOGGING=true
